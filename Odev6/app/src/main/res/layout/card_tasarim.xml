<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/anaRenk"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOyun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/anaRenk"
        android:backgroundTint="@color/anaRenk">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewOyun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/anaRenk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/godofwar" />

            <TextView
                android:id="@+id/textViewOyun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewOyun"
                android:layout_alignRight="@+id/textViewOyun"
                android:background="@color/tVRenk"
                android:text="OYUNFÄ°YATI"
                android:textColor="@color/indirimYazi"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewOyun"
                app:layout_constraintEnd_toEndOf="@+id/imageViewOyun"
                app:layout_constraintStart_toStartOf="@+id/imageViewOyun"
                app:layout_constraintTop_toTopOf="@+id/imageViewOyun"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewOyunIsim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewOyun"
                android:layout_alignRight="@+id/textViewOyun"
                android:background="@color/tVRenk"
                android:text="oyunisim"
                android:textColor="@color/yaziRenk"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewOyun"
                app:layout_constraintEnd_toEndOf="@+id/imageViewOyun"
                app:layout_constraintStart_toStartOf="@+id/imageViewOyun"
                app:layout_constraintTop_toTopOf="@+id/imageViewOyun"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="NotSibling" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>